<?xml version="1.0"?>
<config>
    <modules>
        <Ccc_Banner>
            <version>1.0.0.0</version>
        </Ccc_Banner>
    </modules>
    <adminhtml>
        <layout>
            <updates>
                <banner>
                    <file>banner.xml</file>
                </banner>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <events>
            <admin_system_config_changed_section_banner>
              <observers>
                <banner_config_observer>
                  <type>singleton</type>
                  <class>banner/observer</class>
                  <method>bannerUpdated</method>
                </banner_config_observer>
              </observers>
            </admin_system_config_changed_section_banner>
      
            <admin_system_config_changed_section_advanced>
              <observers>
                <banner_config_observer>
                  <type>singleton</type>
                  <class>banner/observer</class>
                  <method>advancedUpdated</method>
                </banner_config_observer>
              </observers>
            </admin_system_config_changed_section_advanced>
          </events>
        <models>
            <banner>
                <class>Ccc_Banner_Model</class>
                <resourceModel>banner_resource</resourceModel>
            </banner>
            <banner_resource>
                <class>Ccc_Banner_Model_Resource</class>
                <!-- <deprecatedNode>banner_mysql4</deprecatedNode> -->
                <entities>
                    <banner>
                        <table>ccc_banner</table>
                    </banner>
                </entities>
            </banner_resource>
        </models>
        <resources>
            <banner_setup>
                <setup>
                    <module>Ccc_Banner</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </banner_setup>
        </resources>
        <blocks>
            <banner>
                <class>Ccc_Banner_Block</class>
            </banner>
            <!-- <vendorinventory>
                <rewrite>
                    <adminhtml_configuration>Ccc_Banner_Block_Adminhtml_Banner</adminhtml_configuration>
                </rewrite>
            </vendorinventory> -->
        </blocks>
        <helpers>
            <banner>
                <class>Ccc_Banner_Helper</class>
            </banner>
        </helpers>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <ccc_banner before="Mage_Adminhtml">Ccc_Banner_Adminhtml</ccc_banner>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>