<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Ccc_Productseller>
            <version>1.0.1</version>
        </Ccc_Productseller>
    </modules>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Ccc_Productseller before="Mage_Adminhtml">Ccc_Productseller_Adminhtml</Ccc_Productseller>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>    
    <adminhtml>
        <layout>
            <updates>
                <productseller>
                    <file>productseller.xml</file>
                </productseller>
            </updates>
        </layout>
    </adminhtml>
    <frontend>
        <layout>
            <updates>
                <productseller>
                    <file>productseller.xml</file>
                </productseller>
            </updates>
        </layout>
    </frontend>
    <global>
        <models>
            <ccc_productseller>
                <class>Ccc_Productseller_Model</class>
                <resourceModel>productseller_resource</resourceModel>
            </ccc_productseller>
            <productseller_resource>
                <class>Ccc_Productseller_Model_Resource</class>
                <entities>
                    <productseller>
                        <table>ccc_seller</table>
                    </productseller>
                </entities>
            </productseller_resource>
        </models>
        <resources>
            <productseller_setup>
                <setup>
                    <module>Ccc_Productseller</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
            </productseller_setup>
        </resources>
        <blocks>
            <productseller>
                <class>Ccc_Productseller_Block</class>
            </productseller>
            <adminhtml>
                <rewrite>
                    <catalog_product_grid>Ccc_Productseller_Block_Adminhtml_Productgrid</catalog_product_grid>
                </rewrite>
            </adminhtml>
        </blocks>
        <helpers>
            <productseller>
                <class>Ccc_Productseller_Helper</class>
            </productseller>
        </helpers>
    </global>
</config>